@page "/"

@inject Blazored.LocalStorage.ILocalStorageService localStorage

<PageTitle>Index</PageTitle>

<h1>Hello, world! Counter is @counter</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<br />
<p>
    Selected Guid is @supplierGuid.ToString()
</p>
<br />

<SupplierDropDown @bind-Value="supplierGuid" @bind-Value:event="ValueChanged" />


@code
{
    private int counter = 0;

    private Guid supplierGuid = Guid.Parse("6863630a-8035-43ff-8227-cd707b71e72a");

    protected override async Task OnInitializedAsync()
    {
        counter = await localStorage.GetItemAsync<int>("counter");
    }
}
